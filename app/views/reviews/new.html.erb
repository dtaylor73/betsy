<h2>WRITE YOUR REVIEW</h2>

<section class="product-container">
  <div class="product-name-image">
    <%= image_tag @product.photo_url %>
  </div>
  
  
<%# <%= render partial: "reviews/form", locals: { action_name: "Create", verb_name: "create"} %> 
<section>
<%= form_with model: @review,  url: product_reviews_path, class: 'create-review' do |f| %>

  <div class="form-group">
  <%= f.label :rating %><br>
  <%= f.select :rating, [1, 2, 3, 4, 5]%>
  </div>

  <div class="form-group">
  <%= f.label :text, "Review"%><br>
  <%= f.text_area :text %><br>
  <%= f.submit "Save", class: "btn btn-primary" %>
   </div>

