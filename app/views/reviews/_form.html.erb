<%= form_with model: @review, @product_id, class: 'create-review' do |f| %>

  <div class="form-group">
  <%= f.label :name %><br>
  <%= f.text_field :name %>

  </div>
   <%= f.label :rating %><br>
  <%= f.text_field :rating%>
  </div>

  <div>
   <%= f.label :text %><br>
  <%= f.text_field :rating%>
  </div>
  <%= f.submit "#{action_name.capitalize} Review", class: "btn btn-primary" %>

<% end %>

