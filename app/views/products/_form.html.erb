<section>
<%= form_with model: @product, class: "#{action_name}-product" do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
    <%# <%= f.select :category , ["album", "book", "movie"], {}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %> 
    <%= f.select :quantity, options_for_select(1..20), {}, {class: "form-control"} %>
    <%# <%= f.select :quantity, Product.all.map{ |prod| [prod.quantity] } %>
  </div>

  <div class="form-group">
    <%= f.label :description %> 
    <%= f.text_area :description, class: "form-control" %> 
  </div>

  <div class="form-group">
    <%= f.label :photo_url %> 
    <%= f.text_field :photo_url, class: "form-control" %>
  </div>

  <%# <div class="form-group">
    <%= f.label :category %> 
    <%# <%= f.collection_select(:category_ids, Category.all, :id, :name), {}, {class: "form-control"} %>
  <%# </div> %>

  <div class="form-group">
    <%# <%= f.label :category_ids %>
    <%# <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
    <%# <%= f.select :category_ids, Category.all.map{ |categ| [categ.name, categ.id] } %>

    <%= f.label :categories%>
    <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
  </div>

  <%= f.submit "#{action_name.capitalize} Product", class: "btn btn-primary" %>
<% end %>
</section>