<p class="category-title">Add a new Category</p>

<%= form_with model: @category, class: 'create-category' do |f| %>


  <div class="form-group">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
  </div>

  <%= f.submit "#{action_name.capitalize} Category", class: "btn btn-success" %>
<% end %> 